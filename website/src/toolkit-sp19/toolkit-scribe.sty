% The following macro is used to generate the header.
% usage: \lecture{LECTURE NUMBER}{TITLE}{SCRIBE}{DATE}
\newcommand{\lecture}[4]{
   \pagestyle{myheadings}
   \thispagestyle{plain}
   \newpage
   \setcounter{lecnum}{#1}
   \setcounter{page}{1}
   \noindent
   \begin{center}
   \framebox{
      \vbox{\vspace{2mm}
    \hbox to 6.28in {{\bf Theorist's Toolkit
                        \hfill Spring 2019}}
       \vspace{6mm}
       \hbox to 6.28in {{\Large \hfill Lecture #1: #2  \hfill}}
       \vspace{5mm}
       \hbox to 6.28in {{Scribe: #3 \hfill #4}}
      \vspace{2mm}}
   }
   \end{center}
   \markboth{Lecture #1: #2}{Lecture #1: #2}
   \vspace*{4mm}
}

% Useful for creating boxes to contain algorithms
\renewenvironment{quote}
  {\list{}{\leftmargin=1em\rightmargin=1em}\item[]}
  {\endlist}

% For referencing boxes that contain algorithms
\newcommand{\alglabel}[1]{\refstepcounter{algorithm}\label{#1}}

% Use this command for a figure; it puts a figure in wherever you want it.
% usage: \fig{NUMBER}{SPACE-IN-INCHES}{CAPTION}
\newcommand{\fig}[3]{
	\vspace{#2}
	\begin{center}
	Figure \thelecnum.#1:~#3
	\end{center}
}
